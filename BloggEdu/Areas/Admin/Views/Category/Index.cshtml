@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Kategori Adi</th>
    <th>Pasif Yap</th>
    <th>Aktif Yap</th>
    <th>Düzenle</th>
</tr>
    @{
        int pageNumber = Model.PageNumber;
        int pageSize = Model.PageSize;
        int index = ((pageNumber - 1) * pageSize) + 1;
    }
@foreach (var item in Model)
{
    <tr>
        <th>@index</th>
        <td>@item.CategoryName</td>
        <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Pasif Yap</a></td>

        <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
        <td><a href="#" class="btn btn-success">Düzenle</a></td>
    </tr>
        index++;
}
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))

