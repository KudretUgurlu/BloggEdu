@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>No</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @{
        int blogNumber = 1;
    }

    @foreach (var item in Model)
    {
        <tr>
            <th>@blogNumber</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @{
                    string buttonClass = item.BlogStatus ? "active-button" : "inactive-button";
                }
                <a href="/Blog/ChangeBlogStatus/@item.BlogID" class="btn @buttonClass">@item.BlogStatus</a>
            </td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
        </tr>
        blogNumber++;
    }

</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Oluştur</a>

<style>
    .active-button {
        background-color: green;
        color: white;
    }

    .inactive-button {
        background-color: gray;
        color: white;
    }
</style>




